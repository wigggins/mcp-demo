# PostgreSQL Configuration (for Docker Compose)
POSTGRES_DB=mcp_booking_db
POSTGRES_USER=booking_user
POSTGRES_PASSWORD=your_secure_password_here

# Database Connection URL
# For Docker setup (update password to match POSTGRES_PASSWORD above)
DATABASE_URL="postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@localhost:5432/${POSTGRES_DB}?schema=public"

# For manual PostgreSQL installation
# DATABASE_URL="postgresql://username:password@localhost:5432/mcp_booking_db?schema=public"

# Server Configuration
PORT=3001

# Development
NODE_ENV=development 